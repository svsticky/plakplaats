{
	"name": "Plakplaats devcontainer",
	"workspaceFolder": "/home/plakplaats",
	"dockerComposeFile": "docker-compose.yml",
	"service": "website-dev",
	"forwardPorts": [3000],
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-azuretools.vscode-docker"
			]
		}
	},
	"runServices": ["website-dev"]
}
